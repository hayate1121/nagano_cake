<h4>注文履歴一覧</h4>
<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <% @total_amount = 0 %>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td>
        <%= order.customer.last_name %>
        <%= order.customer.first_name %>
      </td>
      <td>
        <% @order_details.each do |order_detail| %>
          <% @total_amount += order_detail.amount %>
        <% end %>
        <%= @total_amount %>
      </td>
      <td>
        <%= order.status %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>