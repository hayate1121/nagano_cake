<div class="container">
<div class="row">
<h5 class="bg-light mr-auto mt-3">
注文履歴一覧
</h5>
</div>
<div class="row">
<table class="table col-8 mr-auto mt-3">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <% @total_amount = 0 %>
    <tr>
      <td>
        <%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id), class: "text-dark" %>
      </td>
      <td>
        <%= order.customer.last_name %>
        <%= order.customer.first_name %>
      </td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <% @total_amount += order_detail.amount %>
        <% end %>
        <%= @total_amount %>
      </td>
      <td>
        <%= order.status_i18n %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>