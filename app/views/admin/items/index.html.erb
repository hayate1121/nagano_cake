<div class="container">
<div class="row">
<h4 class="bg-light mr-auto mt-3">商品一覧</h4>
<%= link_to new_admin_item_path, class: "ml-auto mt-3 text-dark" do %>
<i class="fas fa-plus"></i>
<% end %>
</div>
<div class="row">
<table class="table col-lg-10 mx-auto mt-3">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to item.name, admin_item_path(item.id), class: "text-dark" %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <% if item.is_active == true %>
        <p>販売中</p>
        <% else %>
        <p>販売停止中</p>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>