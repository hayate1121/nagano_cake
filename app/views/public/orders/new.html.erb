<h4>注文情報入力画面</h4>
<%= form_with model: @order, url: confirm_path do |f| %>
<h4><%= f.label :payment_method, "支払方法" %></h4>
<%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %>

<h4><%= f.label :address, "お届け先" %></h4>
<div class="form-group">
  <%= f.radio_button :address_option, 0 %>
  <%= f.label :address, "ご自身の住所" %></br>
  <%= @customer.address_display %>
</div>
<div class="form-group">
  <%= f.radio_button :address_option, 1 %>
  <%= f.label :address, "登録済み住所から選択" %></br>
  <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display) %>
</div>
<div class="form-group">
  <%= f.radio_button :address_option, 2 %>
  <%= f.label :address, "新しいお届け先" %></br>
  <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_area :address %><br>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %><br>
</div>
<%= f.submit "確認画面に進む" %>
<% end %>