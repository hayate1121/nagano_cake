<div class="container">
<div class="row">
<h4 class="bg-light mr-auto mt-5">会員情報編集</h4>
</div>
<%= form_with model: @customer, url: update_customer_path do |f| %>
<div class="field row mt-3">
<div class="col-3">
<%= f.label "氏名" %>
</div>
<div class="col-3">
<%= f.text_field :last_name %>
</div>
<div class="col-3">
<%= f.text_field :first_name %>
</div>
</div>
<div class="field row mt-3">
<div class="col-3">
<%= f.label "フリガナ" %>
</div>
<div class="col-3">
<%= f.text_field :last_name_kana %>
</div>
<div class="col-3">
<%= f.text_field :first_name_kana %>
</div>
</div>
<div class="field row mt-3">
<div class="col-3">
<%= f.label "郵便番号" %>
</div>
<div class="col-3">
<%= f.text_field :postal_code %>
</div>
</div>
<div class="field row mt-3">
<div class="col-3">
<%= f.label "住所" %>
</div>
<div class="col-3">
<%= f.text_area :address %>
</div>
</div>
<div class="field row mt-3">
<div class="col-3">
<%= f.label "電話番号" %>
</div>
<div class="col-3">
<%= f.text_field :telephone_number %>
</div>
</div>
<div class="field row mt-3">
<div class="col-3">
<%= f.label "メールアドレス" %>
</div>
<div class="col-3">
<%= f.text_field :email %>
</div>
</div>

<div class="row mt-3">
<div class="col-3">
<%= f.submit "編集内容を保存", class: "btn btn-success" %>
</div>
<div class="col-3">
<%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
</div>
</div>
<% end %>
</div>