<h4>配送先登録/一覧</h4>
  <%= form_with model: @address, url: addresses_path do |f| %>
    <ul>郵便番号（ハイフンなし）</ul>
    <%= f.text_field :postal_code %>
    <ul>住所</ul>
    <%= f.text_area :address %>
    <ul>宛名</ul>
    <%= f.text_field :name %><br>
    <%= f.submit "新規登録" %>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td>
        <%= address.postal_code %>
      </td>
      <td>
        <%= address.address %>
      </td>
      <td>
        <%= address.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id) %>
        <%= link_to "削除する", customer_path(address.id), method: :delete %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>