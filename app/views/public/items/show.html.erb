<div class="container">
<div class="row mt-5">
<div class="col-5">
<%= image_tag @item.get_item_image(400,400) %>
</div>
<div class="col-7">
<div class="row mt-3">
<div class="col-5">
<%= @item.name %>
</div>
</div>
<div class="row mt-3">
<div class="col-5">
<%= @item.introduction %>
</div>
</div>
<div class="row mt-3">
<div class="col-5">
￥<%= @item.price %>(税込)
</div>
</div>
<div class="row">
<%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
<div class="col-3 mt-3">
<%= f.select :amount, *[1..10] ,options = { include_blank: "個数選択" }%>
<%= f.hidden_field :item_id, :value => @item.id %>
</div>
<div class="col-3 mt-3">
<%= f.submit "カートに入れる", class: "btn btn-success" %>
</div>
<% end %>
</div>
</div>
</div>
</div>